{
  "extends": "@tsconfig/recommended",
  "exclude": [
    "**/*.test.ts",
    "**/*.stub.ts",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "paths": {
      "@circle/core": ["./packages/core/src"],
      "@circle/members": ["./packages/members/src"],
      "@circle/spaces": ["./packages/spaces/src"],
      "@circle/types": ["./packages/types/src"]
    }
  }
}
